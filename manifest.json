{
  "manifest_version": 3,
  "name": "YSync",
  "version": "1.0",
  "description": "YouTube Watch Together (Local Session)",

  "permissions": ["tabs", "storage"],

  "host_permissions": ["https://www.youtube.com/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
